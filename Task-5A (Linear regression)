import numpy as np
import matplotlib.pyplot as plt
def estimate_coef(x, y):
    b1 = np.cov(x, y, bias=True)[0][1] / np.var(x)
    b0 = np.mean(y) - b1 * np.mean(x)
    return b0, b1

def plot_line(x, y, b):
    plt.scatter(x, y)
    plt.plot(x, b[0] + b[1] * x)
    plt.xlabel("x")
    plt.ylabel("y")
    plt.show()
    
x = np.arange(10)
y = np.array([1, 3, 2, 5, 7, 8, 8, 9, 10, 12])
b = estimate_coef(x, y)
print("b0 =", b[0], " b1 =", b[1])
plot_line(x, y, b)
